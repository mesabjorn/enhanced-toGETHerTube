{
  "manifest_version": 2,

  "name": "Enhanced ToGETHerTube",
  "description": "",
  "version": "1.53",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
	"default_title": "Enhanced ToGETHerTube"
  }, 
  "icons": {"16": "icon16.png",
			"48": "icon48.png",
			"128": "icon128.png" },  
  "content_scripts": [
    {
      "matches": ["https://togethertube.com/rooms/*"],
	  "exclude_matches": ["https://togethertube.com/rooms"],
	  "js": ["jquery-2.2.3.min.js","md5.js","gethByListObserver.js"],
	  "css": ["nightmode.css","main.css"],
	  "run_at":"document_idle"
    }
  ],
	"background": {
	"page": "background.html"
  },  
  "permissions": [
	"activeTab",
	"storage",
	"tabs",
	"https://togethertube.com/rooms/crarmy"	
  ],
  "web_accessible_resources": [
	"figs/*.png"
  ],
   "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'; connect-src 'self' wss://*.firebaseio.com;"
}